#!/bin/bash

cd /source

export BUILD_CMAKE_ARGS="-DWITH_MEM_JEMALLOC=OFF -DWITH_MOD_OCEANSIM=OFF -DWITH_OIDN=OFF -DWITH_INSTALL_PORTABLE=OFF -DWITH_PYTHON_INSTALL=OFF -DWITH_AUDASPACE=OFF -DWITH_PYTHON_MODULE=ON -DPYTHON_SITE_PACKAGES=${PYTHON_SITE_PACKAGES}"

make bpy

cd /build_linux_bpy
make install
